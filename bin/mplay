#!/bin/bash -ex

FIFO="/home/robin/.mplayer/mplayer_fifo";
IFS=$'\n';

function finish {
  rm -f "$FIFO";
}
# trap finish EXIT


if [ ! -p "$FIFO" ]; then
  mkfifo $FIFO;
fi

for i in `find $1 -type f -printf '%p\n' | sort`;
do
  track_info "$i" | message topic/message
  mplayer -slave -input file="$FIFO" "$i";
  if [ $? -ne 0 ]; then
    exit;
  fi
done;
